<?php

session_start();

include_once('../config/db.php');


if( isset($_GET['csede']) && isset($_GET['idcamp']) ) {
	$csede = $_GET['csede'];
	$idcamp = $_GET['idcamp'];
	$db = new mysqli(DB_HOST, DB_USER, DB_PASS, DB_NAME);

	$_SESSION['csede'] = $csede;
	
	
	

	$results_array = array();
	$result = mysqli_query($db,"select * from ".TAB_DATI." where codsede = '".$csede."' and idcampagna = ".$idcamp."  order by nome;" );
	while ($row = $result->fetch_assoc()) {
  		$results_array[] = $row;
	}	
	
	//$_SESSION['datisede'] = $results_array;
	
?>
		  <thead>
          <tr><th>Nome</th><th>Cognome</th><th>Codice fiscale</th><th></th><th></th></tr>
        </thead>
        <tbody>
<?php	
	
	foreach ($results_array as $dato) {
	//foreach ($row as $key => $value) {
    //echo "Key: $key; Value: $value<br />\n";
   // echo '<li><a href="javascript:;" name="itemsede"><i class="glyphicon glyphicon-star"></i> '.$row['nome'].'</a></li>';
	//}
?>	
	     
          <tr><td width="200"><?php echo $dato['nome']; ?></td><td width="200"><?php echo $dato['cognome']; ?></td><td width="200"><?php echo $dato['cf']; ?></td><td width="50"></td><td><button type="button" class="btn btn-default btn-xs" aria-label="Left Align">
  <span class="glyphicon glyphicon-upload" aria-hidden="true"></span>
</button></td></tr>
        	

<?php        
}  

?>

			</tbody>
<?php
	
	mysqli_free_result($result);

	mysqli_close($db);



}
?>
