<?php

session_start();

header('Content-type: application/json');

include_once('../config/db.php');


if( isset($_GET['idcamp'])  ) {
	$op=$_GET['op'];
	$idcamp = $_GET['idcamp'];
	$db = new mysqli(DB_HOST, DB_USER, DB_PASS, DB_NAME);

	$results_array = array();
	$result = mysqli_query($db,"select * from ".TAB_CAMPAGNE." where id = ".$idcamp);
	while ($row = $result->fetch_assoc()) {
  		$results_array[] = $row;
	}	
	
	$_SESSION['campagna'] = $results_array;
	
	echo json_encode($results_array);
	
	
//		foreach ($results_array as $dato) {



//	}

	mysqli_free_result($result);

	mysqli_close($db);



}
?>
